@PACKAGE_INIT@

set_and_check(VecCoreLib_INCLUDE_DIR "@PACKAGE_VecCoreLib_INSTALL_INCLUDEDIR@")
set(VecCoreLib_FOUND True)


#include(CMakeFindDependencyMacro)
#find_dependency(VecCore @VecCore_VERSION@ REQUIRED COMPONENTS ${VecCoreLib_FIND_COMPONENTS})
find_package(VecCore @VecCore_VERSION@ REQUIRED COMPONENTS ${VecCoreLib_FIND_COMPONENTS})

if(VecCore_FOUND)
foreach(backend ${VecCoreLib_FIND_COMPONENTS})
  set(VecCoreLib_${backend}_FOUND VecCoreLib_${backend}_FOUND)
endforeach()
endif()

check_required_components(VecCoreLib)

include(${CMAKE_CURRENT_LIST_DIR}/VecCoreLibTargets.cmake)

#for old cmake support
if(VecCoreLib_FOUND)
  set(VecCoreLib_INCLUDE_DIRS ${VecCoreLib_INCLUDE_DIR} ${VecCore_INCLUDE_DIRS})
  set(VecCoreLib_DEFINITIONS ${VecCore_DEFINITIONS})
  set(VecCoreLib_LIBRARIES ${VecCore_LIBRARIES})
endif()
